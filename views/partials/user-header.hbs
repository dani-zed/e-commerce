<style>
body {
  font-family: "Arial", sans-serif;
  margin: 0;
  padding: 0;
}

.top-section {
  text-align: center;
  background-color: #476f33;
  padding: 10px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.top-section a {
  color: #fcfcfc;
  font-size: 24px;
  font-weight: bold;
  flex: 1;
  text-decoration: none;
  font-family: 'Montserrat', sans-serif; /* Update the font-family */
  position: relative;
}

.top-section a.btn:hover::before {
  content: '';
  position: absolute;
  width: 100%; 
  height: 5px;
  background-color: #cb9227; 
  bottom: 0;
  left: 1%; 
  animation: underlineAnimation 0.5s forwards; 
}

@keyframes underlineAnimation {
  from {
    transform: scaleX(0); /* Start with no width (invisible) */
  }
  to {
    transform: scaleX(1); /* Expand to full width */
  }
}

.navbar {
  text-align: center;
  background-color: #ded5d5;
  padding: 10px 0;
}

.navbar-nav {
  text-align: center;
  margin: 0 auto;
}

.navbar-nav .nav-link {
  color: #070707;
  font-size: 18px;
  margin: 0 10px;
  transition: background-color 0.3s ease-in-out;
  position: relative;
}
.badge{
  color:#cb9227;
}

.navbar-nav .nav-link:hover {
  color: #e7ac65;
}

.navbar-nav .nav-link:hover::before {
  content: '';
  position: absolute;
  width: 80%; /* Adjust the width as needed */
  height: 5px;
  background-color: #cb9227;
  bottom: 0;
  left: 10%; /* Adjust the left position for centering */
  animation: underlineAnimation 0.5s forwards; /* Animation definition */
}

.navbar-toggler {
  color: #2c3e50;
  border-color: #2c3e50;
}

.sign-in-up .btn {
  transition: background-color 0.3s ease-in-out,
    border-color 0.3s ease-in-out, color 0.3s ease-in-out;
  color: #3c3c3c;
  background-color: #ada6a6;
  font-size: 16px;
  border: none; /* Remove the border */
}

.sign-in-up .btn:hover {
  
  color: #fafafa;
}
@media (max-width: 768px) {
  .navbar-nav {
    text-align: center;
    margin: 0;
    background-color: #fff; /* White background color for mobile */
  }

  .navbar-nav .nav-link {
    margin: 10px 0;
    background-color: #fff; /* White background color for mobile */
    color: #2c3e50; /* Change text color to match the brand color */
  }

  .top-section {
    flex-direction: column;
    align-items: center;
  }

  .sign-in-up {
    margin-top: 10px;
  }

  body {
    padding-top: 56px; /* Adjust the value based on your navbar's height */
    
  }

  
}

</style>



