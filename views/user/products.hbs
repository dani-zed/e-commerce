    <style>
/* Custom styles */
.product-box {
    cursor: pointer;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out;
    border-radius: 5px; /* Add border radius */
}

.product-box:hover {
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    transform: scale(0.99);
}

.product-image {
    width: 100%;
    height: 100px;
    object-fit: cover;
    border-radius: 10px; /* Add border radius */
}

.search-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 20px;
}

.search-input {
    width: 70%;
    padding: 8px;
    border-radius: 4px 0 0 4px;
    border: 1px solid #7c5845;
}

.search-icon {
    background-color: #151f1c;
    color: #fff;
    padding: 8px;
    border: 1px solid #654835;
    border-radius: 0 4px 4px 0;
    cursor: pointer;
}

.content {
    background-color: grey; /* Update background color */
}

.table {
    border-radius: 10px; /* Add border radius */
    overflow: hidden; /* Ensure border radius applies */
}

.table th,
.table td {
    background-color:#c1bbbb ;
    padding: 8px;
    text-align: left;
}

.table thead th {
    background-color:#151f1c ;
    color: #fff;
}

.table tbody tr:nth-child(even) {
    background-color: #151f1c;
}

.table tbody tr:hover {
    background-color: #151f1c;
}
.btn-view-product {
    background-color: #151f1c; 
    color: #fff; /* White text color */
    border: none;
    border-radius: 5px;
    padding: 8px 16px; /* Adjust padding as needed */
    text-decoration: none;
}
body{
    background-color: grey;
}



    </style>

   <section class="content"> 
     <div class="container mt-5">
        <h2 class="text-center mb-4">Product List</h2>
        <div class="search-bar mb-4">
            <input type="text" class="form-control search-input" placeholder="Search items..." oninput="filterProducts()">
            <div class="search-icon" onclick="filterProducts()">üîç</div>
        </div>
   
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price(Rs)</th>
                    <th scope="col">Details</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
            <tr class="product-box">
            <td>
                <img style="width: 70px; height: 70px;" src="/product-images/{{this._id}}.jpg" alt="Product Image" class="img-fluid product-image">
            </td>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.price}}</td>
            <td>
    <a href="/the-product/{{this._id}}" class="btn btn-view-product">View Product</a>
</td>

            </tr>
            {{/each}}

            </tbody>
        </table>
    </div>
        <!-- Search Bar -->
   </section>
        
    <script>
 function filterProducts() {
    var input, filter, table, tbody, tr, td1, td2, i, txtValue1, txtValue2;
    input = document.querySelector('.search-input');
    filter = input.value.toUpperCase();
    table = document.querySelector('.table');
    tbody = table.querySelector('tbody');
    tr = tbody.getElementsByTagName('tr');

    for (i = 0; i < tr.length; i++) {
        td1 = tr[i].getElementsByTagName('td')[1]; // Second <td>
        td2 = tr[i].getElementsByTagName('td')[2]; // Third <td>
        if (td1 && td2) {
            txtValue1 = td1.textContent || td1.innerText;
            txtValue2 = td2.textContent || td2.innerText;
            if (
                txtValue1.toUpperCase().indexOf(filter) > -1 ||
                txtValue2.toUpperCase().indexOf(filter) > -1
            ) {
                tr[i].style.display = '';
            } else {
                tr[i].style.display = 'none';
            }
        }
    }
}

    </script>

